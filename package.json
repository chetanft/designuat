{
  "name": "figma-web-comparison-tool",
  "version": "1.0.0",
  "description": "A tool that compares UI designs in Figma with actual implemented web screens",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "start": "node index.js",
    "start:unified": "node server-unified.js",
    "dev": "concurrently \"npm run dev:frontend\" \"npm run start:unified\"",
    "dev:frontend": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "dev:legacy": "nodemon index.js",
    "test": "NODE_OPTIONS=\"--experimental-vm-modules\" jest",
    "test:watch": "NODE_OPTIONS=\"--experimental-vm-modules\" jest --watch",
    "test:coverage": "NODE_OPTIONS=\"--experimental-vm-modules\" jest --coverage",
    "test:unit": "NODE_OPTIONS=\"--experimental-vm-modules\" jest --testPathPattern=tests/unit",
    "test:integration": "NODE_OPTIONS=\"--experimental-vm-modules\" jest --testPathPattern=tests/integration",
    "test:api": "NODE_OPTIONS=\"--experimental-vm-modules\" jest --testPathPattern=tests/api",
    "test:e2e": "NODE_OPTIONS=\"--experimental-vm-modules\" jest --testPathPattern=tests/e2e",
    "test:performance": "NODE_OPTIONS=\"--experimental-vm-modules\" jest --testPathPattern=tests/performance",
    "compare": "node src/cli.js"
  },
  "dependencies": {
    "@types/react": "^19.1.6",
    "@types/react-dom": "^19.1.6",
    "axios": "^1.9.0",
    "chalk": "^5.3.0",
    "commander": "^11.1.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "ora": "^8.0.1",
    "pixelmatch": "^5.3.0",
    "pngjs": "^7.0.0",
    "puppeteer": "^21.6.1",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "sharp": "^0.33.1",
    "typescript": "^5.8.3"
  },
  "devDependencies": {
    "@headlessui/react": "^2.2.4",
    "@heroicons/react": "^2.2.0",
    "@jest/globals": "^29.7.0",
    "@tailwindcss/forms": "^0.5.10",
    "@tanstack/react-query": "^5.80.6",
    "@testing-library/jest-dom": "^6.1.5",
    "@vitejs/plugin-react": "^4.5.1",
    "concurrently": "^9.1.2",
    "framer-motion": "^12.16.0",
    "jest": "^29.7.0",
    "jest-environment-node": "^29.7.0",
    "jest-puppeteer": "^9.0.2",
    "msw": "^2.0.11",
    "nock": "^13.4.0",
    "nodemon": "^3.0.2",
    "react-hook-form": "^7.57.0",
    "supertest": "^6.3.3",
    "tailwindcss": "^4.1.8",
    "vite": "^6.3.5"
  },
  "jest": {
    "testEnvironment": "node",
    "transform": {},
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ],
    "testMatch": [
      "<rootDir>/tests/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/**/*.test.js",
      "!**/node_modules/**"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "testTimeout": 30000
  },
  "keywords": [
    "figma",
    "design-system",
    "ui-testing",
    "visual-diff",
    "design-qa"
  ],
  "author": "AI Developer",
  "license": "MIT"
}
