{
  "name": "figma-web-comparison-tool",
  "version": "1.0.0",
  "description": "A tool that compares UI designs in Figma with actual implemented web screens",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "start": "node index.js",
    "dev": "nodemon index.js",
    "test": "NODE_OPTIONS=\"--experimental-vm-modules\" jest",
    "test:watch": "NODE_OPTIONS=\"--experimental-vm-modules\" jest --watch",
    "test:coverage": "NODE_OPTIONS=\"--experimental-vm-modules\" jest --coverage",
    "test:unit": "NODE_OPTIONS=\"--experimental-vm-modules\" jest --testPathPattern=tests/unit",
    "test:integration": "NODE_OPTIONS=\"--experimental-vm-modules\" jest --testPathPattern=tests/integration",
    "test:api": "NODE_OPTIONS=\"--experimental-vm-modules\" jest --testPathPattern=tests/api",
    "test:e2e": "NODE_OPTIONS=\"--experimental-vm-modules\" jest --testPathPattern=tests/e2e",
    "test:performance": "NODE_OPTIONS=\"--experimental-vm-modules\" jest --testPathPattern=tests/performance",
    "compare": "node src/cli.js"
  },
  "dependencies": {
    "axios": "^1.9.0",
    "chalk": "^5.3.0",
    "commander": "^11.1.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "ora": "^8.0.1",
    "pixelmatch": "^5.3.0",
    "pngjs": "^7.0.0",
    "puppeteer": "^21.6.1",
    "sharp": "^0.33.1"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@testing-library/jest-dom": "^6.1.5",
    "jest": "^29.7.0",
    "jest-environment-node": "^29.7.0",
    "jest-puppeteer": "^9.0.2",
    "msw": "^2.0.11",
    "nock": "^13.4.0",
    "nodemon": "^3.0.2",
    "supertest": "^6.3.3"
  },
  "jest": {
    "testEnvironment": "node",
    "transform": {},
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ],
    "testMatch": [
      "<rootDir>/tests/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/**/*.test.js",
      "!**/node_modules/**"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "testTimeout": 30000
  },
  "keywords": [
    "figma",
    "design-system",
    "ui-testing",
    "visual-diff",
    "design-qa"
  ],
  "author": "AI Developer",
  "license": "MIT"
}
